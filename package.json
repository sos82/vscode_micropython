{
	"name": "helloworld-sample",
	"displayName": "helloworld-sample",
	"description": "HelloWorld example for VS Code",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"enableProposedApi": true,
	"repository": "https://github.com/Microsoft/vscode-extension-samples/helloworld-sample",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onView:MicrobitExplorer",
		"onView:testView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "microbit-explorer",
					"title": "Microbit Explorer",
					"icon": "media/microbit.svg"
				}
			]
		},
		"views": {
			"microbit-explorer": [
				{
					"id": "MicrobitExplorer",
					"name": "Files",
					"icon": "media/microbit.svg",
					"contextualTitle": "Microbit Explorer"
				}
			],
			"explorer": [
				{
					"id": "testView",
					"name": "Test View"
				}
			]
		},
		"commands": [
			{
				"command": "MicrobitExplorer.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "MicrobitExplorer.uploadEntry",
				"title": "Upload",
				"icon": {
					"light": "resources/light/document.svg",
					"dark": "resources/dark/document.svg"
				}
			},
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"menus": {
			"view/title": [
				
				{
					"command": "MicrobitExplorer.refreshEntry",
					"when": "view == MicrobitExplorer",
					"group": "navigation"
				},
				{
					"command": "MicrobitExplorer.uploadEntry",
					"when": "view == MicrobitExplorer",
					"group": "navigation"
				}

			]
		},
		"viewsWelcome": [
			{
				"view": "MicrobitExplorer",
				"contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Connect Microbit](command:MicrobitExplorer.addEntry)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.52.0",
		"@types/rimraf": "^2.0.2",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.3.5",
		"electron": "^13.1.8",
		"electron-rebuild": "^3.2.3"
	},
	"dependencies": {
		"serialport": "^9.2.1",
		"electron-releases": "^3.783.0",
		"rimraf": "^2.6.2",
		"minimist": "^0.2.1"
	}
}

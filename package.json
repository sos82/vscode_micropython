{
	"name": "helloworld-sample",
	"displayName": "helloworld-sample",
	"description": "HelloWorld example for VS Code",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"repository": "https://github.com/Microsoft/vscode-extension-samples/helloworld-sample",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onView:MicrobitExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "microbit-explorer",
					"title": "Microbit Explorer",
					"icon": "media/microbit.svg"
				}
			]
		},
		"views": {
			"microbit-explorer": [
				{
					"id": "MicrobitExplorer",
					"name": "Files",
					"icon": "media/microbit.svg",
					"contextualTitle": "Microbit Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"viewsWelcome": [
			{
				"view": "MicrobitExplorer",
				"contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Connect Microbit](command:nodeDependencies.addEntry)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"electron": "^13.1.8",
		"electron-rebuild": "^3.2.3",
		"eslint": "^7.21.0",
		"serialport": "^9.2.1",
		"typescript": "^4.2.2"
	},
	"dependencies": {
		"electron-releases": "^3.783.0"
	}
}
